<div class="form-class">
  <%= form_for task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>

    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>

    <%  unless task.new_record?() %>
      <%= f.label :completed %>
      <%= f.check_box :completed, class: 'form-control' %>
    <% end %>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
